<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
app:layout_behavior="@string/appbar_scrolling_view_behavior"
tools:context="com.example.android.favoritetoys.Main2Activity"
tools:showIn="@layout/activity_main2">

    <LinearLayout
        android:id="@+id/under_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_margin="0dp">

            <FrameLayout
                android:id="@+id/gradient_frameLayout"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="0dp">

                <ImageView
                    android:id="@+id/coverimage"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/coverimage" />

                <View
                    android:id="@+id/gradient_view"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/gradient_coverimage" />

            </FrameLayout>


            <de.hdodenhof.circleimageview.CircleImageView

                android:id="@+id/profilepic"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:layout_gravity="bottom|center_horizontal"
                android:scaleType="centerCrop"
                android:src="@drawable/profilepic"
                app:civ_border_color="#0d0d0d"
                app:civ_border_width="1dp" />

            <FrameLayout
                android:id="@+id/frame_blur"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="0dp"
                android:visibility="invisible">

                <com.wonderkiln.blurkit.BlurLayout

                    android:id="@+id/blurLayout"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_margin="0dp"
                    app:blurRadius="4">


                    <ImageView
                        android:id="@+id/coverimage_camera"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_gravity="right|top"
                        android:layout_margin="12dp"
                        android:clickable="true"
                        android:src="@drawable/ic_camera_enhance_black_24dp" />


                    <FrameLayout
                        android:layout_width="108dp"
                        android:layout_height="108dp"
                        android:layout_gravity="bottom|center_horizontal"
                        android:clickable="true">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profilepic_camera"
                            android:layout_width="108dp"
                            android:layout_height="108dp"
                            android:layout_gravity="bottom|center_horizontal"
                            android:scaleType="centerCrop"
                            android:src="#53ffffff"
                            app:civ_border_color="#0d0d0d"
                            app:civ_border_width="1dp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_camera_enhance_black_24dp" />

                    </FrameLayout>

                </com.wonderkiln.blurkit.BlurLayout>

            </FrameLayout>


        </FrameLayout>


        <Button
            android:id="@+id/edit_button"
            android:layout_width="150dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/button_shape"
            android:clickable="true"
            android:text="Edit"
            android:textColor="@android:color/black" />


        <TextView
            android:id="@+id/about_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:fontFamily="casual"
            android:text="Aditi Soni"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold" />





        <LinearLayout
            android:id="@+id/info_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/followers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="sans-serif-smallcaps"
                android:maxLines="1"
                android:text=""
                android:textAlignment="center"
                android:textColor="@android:color/black" />
/>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
